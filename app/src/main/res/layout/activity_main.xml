<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="413dp"
        android:layout_height="733dp"
        android:background="@color/OldSunday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:paddingLeft="7dp"

          >

            <TableRow
                android:background="@color/OldSunday"
                android:padding="4dp"
                android:gravity="center">

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Recommendations" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Part of income" />
            </TableRow>

            <TableRow
                android:background="#DAE8FC"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Key Expenses" />

                <TextView
                    android:id="@+id/KeeSpending_First_Screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KeeSpending" />
            </TableRow>

            <TableRow
                android:background="#DAE8FC"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Investing expenses" />

                <TextView
                    android:id="@+id/Investin_Screen_First"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Investing" />

            </TableRow>

            <TableRow
                android:background="#DAE8FC"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lavish spendings" />

                <TextView
                    android:id="@+id/Lavish_First_Screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lavish" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Text_Changer_Button"
        android:layout_width="212dp"
        android:layout_height="82dp"
        android:layout_marginBottom="209dp"
        android:background="@drawable/shapeofbutton"
        android:backgroundTint="@color/ButtonColor"
        android:text="Update income"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/duomenu_ivedimas" />


    <TextView
        android:id="@+id/duomenu_ivedimas"
        android:layout_width="174dp"
        android:layout_height="23dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ataskaita_button"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:layout_marginBottom="50dp"
        android:text="Monthly expenses report"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_menesiai"
        android:layout_width="160dp"
        android:layout_height="69dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/ButtonColor"
        android:text="Visual representation"
        app:layout_constraintBottom_toTopOf="@+id/ataskaita_button"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>