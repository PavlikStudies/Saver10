<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="413dp"
        android:layout_height="733dp"
        android:background="@color/OldSunday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:paddingLeft="7dp"

          >

            <TableRow
                android:background="@color/OldSunday"
                android:padding="4dp"
                >

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Recommendations"
                    android:textStyle="italic"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Part of income"
                    android:textStyle="italic"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:background="#DAE8FC"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Key Expenses"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/KeeSpending_First_Screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KeeSpending"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:background="#DAE8FC"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Investing budget"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/Investin_Screen_First"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Investing"
                    android:textAlignment="center"/>

            </TableRow>

            <TableRow
                android:background="#DAE8FC"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lavish spendings"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/Lavish_First_Screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lavish"
                    android:textAlignment="center"/>
            </TableRow>

        </TableLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_menesiai"
            android:layout_width="160dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="168dp"
            android:backgroundTint="@color/ButtonColor"
            android:text="Visual representation" />

        <Button
            android:id="@+id/ataskaita_button"
            android:layout_width="181dp"
            android:layout_height="83dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="54dp"
            android:text="Monthly expenses report" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Text_Changer_Button"
        android:layout_width="212dp"
        android:layout_height="82dp"
        android:layout_marginBottom="209dp"
        android:background="@drawable/shapeofbutton"
        android:backgroundTint="@color/ButtonColor"
        android:text="Update income"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/duomenu_ivedimas" />


    <TextView
        android:id="@+id/duomenu_ivedimas"
        android:layout_width="174dp"
        android:layout_height="23dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>